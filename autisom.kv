Mainlayout:

<Mainlayout>:
    rows:3


#--------------bannar start----------------------------------
    Image:
        source:"banner.jpg"
        size_hint:1,.2
        allow_stretch: True
        keep_ratio: False
        

        canvas.before:
            Color:
                rgba: 143/255.0, 65/255.0, 149/255.0, 1
            Rectangle:
                pos:self.pos
                size:self.size


#--------------bannar end----------------------------------

#-------------main body start----------------------------------

    BoxLayout:
        orientation:"horizontal"
        #spacing:"10dp"
        size_hint:1,.5

        

#-----Layout for personal info of the child start---
        BoxLayout:
            padding:"20dp"
            orientation:"vertical"
            

            canvas.before:
                Color:
                    rgba: 187/255.0, 114/255.0, 215/255.0, 1
                Rectangle:
                    pos:self.pos
                    size:self.size

            Label:
                text:"Enter patients info :"
                bold:True
                size_hint:1,.6


            BoxLayout:
                orientation:"horizontal"
                size_hint:1,.5

                BoxLayout:
                    orientation:"vertical"
                    spacing:"20dp"
                    pos_hint:{"center_x":.3,"center_y":.8}

                    Label:
                        
                        text:"Name   :"
                        size_hint:1,.2
                        #height:"25px"
                    Label:
                       
                        text:"Age     :"
                        size_hint:1,.2
                        #height:"25px"
                    Label:
                        
                        text:"Gender :"
                        size_hint:1,.2
                        #height:"25px"
                    Label:
                        
                        text:"Region :"
                        size_hint:1,.2
                        #height:"25px"

                BoxLayout:
                    size_hint:.7,1
                    orientation:"vertical"
                    spacing:"5dp"
                    pos_hint:{"center_x":.5,"center_y":.8}

                    TextInput:
                        id:name_input
                        size_hint:1,.2
                        #height:"35px"
                        pos_hint:{"center_x":.1,"center_y":.5}
                        multiline:False
                        background_color: 225/255.0, 178/255.0, 241/255.0, 1
                        on_focus: root.update_window(self.focus)  # Call update_window method when input is focused

                    TextInput:
                        id:age_input
                        size_hint:1,.2
                        #height:"35px"
                        pos_hint:{"center_x":.1,"center_y":.5}
                        multiline:False
                        background_color: 225/255.0, 178/255.0, 241/255.0, 1



                    TextInput:
                        id:gender_input
                        size_hint:1,.2
                        #height:"35px"
                        pos_hint:{"center_x":.1,"center_y":.5}
                        multiline:False
                        background_color: 225/255.0, 178/255.0, 241/255.0, 1

                    TextInput:
                        id:region_input
                        size_hint:1,.2
                        #height:"35px"
                        pos_hint:{"center_x":.1,"center_y":.5}
                        multiline:False
                        background_color: 225/255.0, 178/255.0, 241/255.0, 1

#-----Layout for personal info of the child end---

#-----Layout for problen input start---

        BoxLayout:
            orientation:"vertical"
            spacing:"10dp"
            padding:"20dp"

            canvas.before:
                Color:
                    rgba: 167/255.0, 99/255.0, 196/255.0, 1
                Rectangle:
                    pos:self.pos
                    size:self.size

            Label:
                text:"Enter patients symptoms:"
                bold:True
                size_hint:1,.3


            TextInput:
                id: read_text
                size_hint:.7,.5
                pos_hint:{"center_x":.5,"center_y":.5}
                background_color: 225/255.0, 178/255.0, 241/255.0, 1
                

            Button:
                text:"Submit"
                size_hint:.4,.2
                pos_hint:{"center_x":.5,"center_y":.5}
                on_press:root.button_click()
                #background_normal: ""
                background_color: 0, 1, 1, 0

                canvas.before:
                    Color:
                        rgba: 1, .8, 1, 0.5
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [15]
                


#-----Layout for problen input end---

#--------------main body end-------------------------------------

#--------------answer start-------------------------------------
    
    BoxLayout:
        orientation:"horizontal" 
        size_hint:1,.2
        padding:"5dp"
        spacing:"30dp"

        canvas.before:
            Color:
                rgba: 167/255.0, 99/255.0, 196/255.0, 1
            Rectangle:
                pos:self.pos
                size:self.size
        
        
        
        Label:
            id:answer
            text:root.update_text
            size_hint:.6,.5
            pos_hint:{"center_x":.5,"center_y":.5}

            canvas.before:
                Color:
                    rgba: 167/255.0, 99/255.0, 196/255.0, 1
                Rectangle:
                    pos:self.pos
                    size:self.size
                    



              
        

        Button:
            text:"Clear all"              
            pos_hint:{"center_x":.5,"center_y":.5}   
            #background_normal: ""
            background_color: 0, 1, 1, 0
            size_hint:.2,.3  
            on_press:root.clear_text()

            canvas.before:
                Color:
                    rgba: 1, .8, 1, 0.5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [15]
            
       
            
                
                


    

#-------------answer end----------------------------------


